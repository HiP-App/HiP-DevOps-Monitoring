

groups:
- name: targets
  rules:
  - alert: monitor_service_down
    expr: up == 0
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Monitor service non-operational"
      description: "Service {{ $labels.instance }} is down."

- name: host
  rules:
  - alert: high_cpu_load
    expr: node_load1 > 1.5
    for: 30s
    labels:
      severity: warning
    annotations:
      summary: "Server under high load"
      description: "Docker host is under high load, the avg load 1m is at {{ $value}}. Reported by instance {{ $labels.instance }} of job {{ $labels.job }}."

  - alert: high_memory_load
    expr: (sum(node_memory_MemTotal) - sum(node_memory_MemFree + node_memory_Buffers + node_memory_Cached) ) / sum(node_memory_MemTotal) * 100 > 85
    for: 30s
    labels:
      severity: warning
    annotations:
      summary: "Server memory is almost full"
      description: "Docker host memory usage is {{ humanize $value}}%. Reported by instance {{ $labels.instance }} of job {{ $labels.job }}."

  - alert: high_storage_load
    expr: (node_filesystem_size{fstype="aufs"} - node_filesystem_free{fstype="aufs"}) / node_filesystem_size{fstype="aufs"}  * 100 > 85
    for: 30s
    labels:
      severity: warning
    annotations:
      summary: "Server storage is almost full"
      description: "Docker host storage usage is {{ humanize $value}}%. Reported by instance {{ $labels.instance }} of job {{ $labels.job }}."

- name: containers
  rules:
  - alert: graylog_down
    expr: absent(container_memory_usage_bytes{name="graylog_graylog_1"})
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Graylog down"
      description: "Graylog container is down for more than 30 seconds."

  - alert: angularapp-develop-1.develop.b1e40a3a_down
    expr: absent(container_memory_usage_bytes{name="angularapp-develop-1.develop.b1e40a3a"})
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "hipcms/angularapp:test down"
      description: "hipcms/angularapp:test is down for more than 30 seconds."

  - alert: userstore-develop-1.develop.3899643f_down
    expr: absent(container_memory_usage_bytes{name="userstore-develop-1.develop.3899643f"})
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "hipcms/userstore:test down"
      description: "hipcms/userstore:test container is down for more than 30 seconds."

  - alert: hipcms/thumbnailservice:test_down
    expr: absent(container_memory_usage_bytes{name="thumbnailservice-develop-1.develop.531b6b27"})
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "hipcms/thumbnailservice:test down"
      description: "hipcms/thumbnailservice:test container is down for more than 30 seconds."
      
  - alert: hipcms/datastore:test
    expr: absent(container_memory_usage_bytes{name="datastore-develop-1.develop.4c0d52ad"})
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "hipcms/datastore:test down"
      description: "hipcms/datastore:test container is down for more than 30 seconds."
      
  - alert: hipcms/achievements:test
    expr: absent(container_memory_usage_bytes{name="achievements-develop-1.develop.6d12bf7b"})
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "hipcms/achievements:test down"
      description: "hipcms/achievements:test container is down for more than 30 seconds."
      
 - alert: dockercloud/network-daemon:1.11.2-cs5
    expr: absent(container_memory_usage_bytes{name="weave-98256.e8076aa3"})
    for: 30s
